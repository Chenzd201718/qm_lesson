@import "../../base/fn"

.weui-btn
    position relative
    display block
    margin-left auto
    margin-right auto
    padding-left 14px
    padding-right 14px
    box-sizing border-box
    line-height 2.5556
    font-size weuiBtnFontSize 
    text-align center
    color weuiBtnFontColor 
    border-radius weuiBtnBorderRadius 
    setTapColor()
    overflow hidden

.weui-btn_inline
    display inline
